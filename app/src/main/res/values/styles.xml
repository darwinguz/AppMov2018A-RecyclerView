<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LikeTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorLike</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="UnlikeTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorUnlike</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

</resources>
